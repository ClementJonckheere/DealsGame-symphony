<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
        {# <link href="{{ asset('css/styles.css') }}" rel="stylesheet" type="text/css" /> #}
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link rel="stylesheet" href="{{ asset('css/resell.css') }}">
        {% endblock %}




        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
<nav class="navbar navbar-expand-lg fixed-top">
  <a class="a-logo" href="{{ path('app_home') }} ">
  <img class="logo" src="{{ asset('images/DealGame.png')}}" alt="logo" /></a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <a class="nav-link" href="{{ path('app_video_games') }}">Jeux video</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('app_consoles') }}">Consoles</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('app_accessories') }}">Accessoires</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('app_resell') }}">Revendre</a>
      </li>
      <li class="nav-item connexion-item">
        <a class="nav-link connexion-link" href="">Connexion | <img src="{{ asset('images/inscription.png')}}" alt="icon d'inscription" class="inscription-icon"/></a>
      </li>
    </ul>
  </div>

</nav>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        {% block body %}
        {% endblock %}
        <footer>
          <div class="container-footer">
            <div class="row-title-footer">
              <div class="title-footer">
                <p class="logo-footer">DealGames</p>
              </div>
              <div class="copyright-footer">
                <p class="copyright">&copy;</p>
              </div>
            </div>
            <div class="columns-liens-footer">
              <div class="container-liens-footer">
                <div class="title-footer-liens">
                  <h2 class="h2-footer-liens">Liens</h2>
                </div>
                <ul class="footer-liens">
                  <li class="footer-item">
                    <a class="footer-link" href="{{ path('app_video_games') }}">Jeux video</a>
                  </li>
                  <li class="footer-item">
                    <a class="footer-link" href="{{ path('app_consoles') }}">Consoles</a>
                  </li>
                  <li class="footer-item">
                    <a class="footer-link" href="{{ path('app_accessories') }}">Accessoires</a>
                  </li>
                  <li class="footer-item">
                    <a class="footer-link" href="{{ path('app_resell') }}">Revendre</a>
                  </li>
                </ul>
              </div>
              <div class="container-footer-more">
                <div class="title-footer-liens">
                  <h2 class="h2-footer-liens">A propos</h2>
                </div>
              </div>
            </div>
          </div>
        </footer>
    </body>
</html>
