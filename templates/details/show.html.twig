{% extends 'base.html.twig' %}

{% block title %}Hello DetailsController!{% endblock %}

{% block body %}
<main>
    <div class="container d-flex justify-content-between">
        <section class="category-picture pt-5">
            <div class="picture-category">
                <img class="img-details" src="{{ vich_uploader_asset(announce)}}" alt="{{ announce.name }}">
            </div>
        </section>
        <section class="category-title-contact pt-5 ms-5">
            <div class="title-category">
                <h1 class="mt-1">{{ announce.name }}</h1>
            </div>
            <div class="description-category">
                <h2 class="mt-3">Description </h2>
                <p>{{ announce.description}}</p>
            </div>
            <div class="revender-category">
                <h3 class="title-revender">Revendeur : {{ announce.user.email }}</h3> 
            </div>
            <div class="contact-button">
             
                <button class="btn btn-contact">Contacter</button>
            </div>
        </section>
    </div>
</main>
{% endblock %}
